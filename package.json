{
  "name": "copy-to-open",
  "displayName": "Copy To Open",
  "description": "Open file in clipbaord",
  "version": "0.0.3",
  "license": "MIT",
  "icon": "resources/open_256.png",
  "publisher": "web-solid",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copy-to-open.openFileInClipboard",
    "onCommand:copy-to-open.openSearchInClipboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-to-open.openFileInClipboard",
        "title": "Open File In Clipboard"
      },
      {
        "command": "copy-to-open.openSearchInClipboard",
        "title": "Open Seaarch In Clipboard"
      }
    ],
    "configuration": {
      "title": "Google Search Config",
      "type": "object",
      "properties": {
        "googleSearch.QueryTemplate": {
          "type": "string",
          "default": "https://www.google.com/search?q=%SELECTION%",
          "description": "Search Query"
        }
      }
    },
     "keybindings": [
      {
        "command": "copy-to-open.openFileInClipboard",
        "key": "ctrl+shift+O",
        "mac": "cmd+shift+O"
      },
      {
        "command": "copy-to-open.openSearchInClipboard",
        "key": "ctrl+shift+Q",
        "mac": "cmd+shift+Q"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/web-solid/vscode-copy-to-open.git"
  }
}
